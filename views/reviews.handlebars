<body id = "reviews-page">
<div class="centerContainer">
    <h1>Write a Review for your recipe</h1>

    <div class="formDiv">
        <form class="formContainer">
            <div class="formInputContainer">
                <label for="Name" class="formInputLabel adjustWidth">Reviewer Name:</label>
                <div class="formInputElement">
                    <input type="text" id="reviewsName" name="reviewsName" class="formInput">
                </div>
            </div>

            <div class="formInputContainer">
                <label for="Recipe" class="formInputLabel adjustWidth">Recipe Name:</label>
                <div class="formInputElement">
                    <input type="text" id="reviewsRecipe" name="reviewsRecipe" class="formInput">
                </div>
            </div>

            <div class="formInputContainer">
                <label for="Phone" class="formInputLabel adjustWidth">Rating:</label>
                <div class="formInputElement">
                    <input type="number" min="0" max="5" step="0.01" id="reviewsPhone" name="reviewsPhone" class="formInput">
                </div>
            </div>


